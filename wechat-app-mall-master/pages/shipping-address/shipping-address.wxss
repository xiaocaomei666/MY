.addr {
  width: 100%;
}

/*标签默认样式  */

.sp {
  display: inline-block;
  width: 120rpx;
  height: 40rpx;
  font-size: 27rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid #888;
  border-radius: 30rpx;
  margin-right: 20rpx;
  color: #888;
  box-sizing: border-box;
}

.sp2 {
  display: inline-block;
  width: 100rpx;
  height: 40rpx;
  font-size: 27rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx dashed #888;
  border-radius: 30rpx;
  margin-right: 20rpx;
  color: #888;
  box-sizing: border-box;
  margin-top: 20rpx;
}

/*标签激活的样式  */

.sp-activate {
  display: inline-block;
  width: 120rpx;
  height: 40rpx;
  font-size: 27rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-right: 20rpx;
  color: #fff;
  background: #69C3AA;
  box-sizing: border-box;
}

/*删除默认样式  */

.btn {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.del {
  color: #747784;
  border: 1rpx solid #9ea0a8;
  border-radius: 15rpx;
  width: 100%;
  margin-left: -0rpx;
  background: transparent;
}

/*确认默认样式  */

.sure {
  width: 100%;
  color: #fff;
  background: #69C3AA;
  margin-left: -0rpx;
  border-radius: 15rpx;
}

button::after {
  border: none;
}

/*弹窗  */

.template {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 900;
}

/*弹框  */

.template-view {
  width: 84%;
  height: 297rpx;
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 270rpx;
  margin-left: -42%;
  padding: 50rpx 0 0 0;
  color: #000;
  box-sizing: border-box;
}

/*取消  */

.template-cancel {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  bottom: 25%;
  margin-left: -40rpx;
}

/*标题  */

.template-title {
  font-size: 33rpx;
  margin-bottom: 20rpx;
}

/*内容  */

.template-content {
  font-size: 30rpx;
  height: 56rpx;
  line-height: 56rpx;
}

/*按钮  */

.template-button {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 87rpx;
  line-height: 87rpx;
  display: flex;
  box-sizing: border-box;
  background: transparent;
}

.template-button button {
  width: 83%;
  border-radius: 0;
  color: #54b354;
  font-size: 32rpx;
  height: 87rpx;
  line-height: 87rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom-left-radius: 15rpx;
  background: #fff;
}

.template-button button:nth-child(1) {
  background: rgba(255, 255, 255, 0.5);
  color: #000;
  border-right: 1rpx solid rgba(0, 0, 0, 0.2);
}

.template-button button:nth-child(2) {
  border-bottom-right-radius: 15rpx;
}

.addtag {
  background: yellow;
}
