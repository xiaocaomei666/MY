/* pages/order/order.wxss */
page {
  background: #fdfdfd;
}
/*底部固定按钮开始*/
.PayBottom {
  position: fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 100rpx;
  border-top: 10rpx solid #f8f8f8; 
}
.PayBottom view {
  float: left;
  font-size: 28rpx;
  color: #494949;
}
.payBottom-left {
  width: 49%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content:center;
  border-right: 1px solid #dcdcdc;
}
.payBottom-right {
  width: 49%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content:center;
}
/*底部固定按钮结束*/
/*头部开始  */
.PayBigBox {
  padding-top: 70rpx;
}
.PayTitle-box {
 margin-top:30rpx;
}
/*头部结束  */

/* 中部开始 */
.PayCenter {
  margin-top: 88rpx;
  margin-left: 78rpx;
  margin-right: 78rpx;
}
.vx-image {
  width: 100%;
  height: 35rpx;
  overflow: hidden;
  margin-bottom: 18rpx;
}
.vx-image image {
  width: 35rpx;
  height: 35rpx;
  float: left;  
  margin-right: 14rpx;
  vertical-align: middle; 
}
.vx-image text {
  /* padding-top:18rpx; */
  float: left;
  font-size: 28rpx;
  color:#767a86;
}
.PaySite {
  clear: both;
  text-align: left;
  font-size: 28rpx;
}
.CenterBox {
  margin-bottom: 32rpx;
}
/* 中部结束 */