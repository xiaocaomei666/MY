/* pages/mine/mine.wxss */
@import '../template/template.wxss';

.mine-view {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.mine {
  background-color: #fff;
  width: 100%;
  height: 99%;
  margin-top: 10rpx;
  padding: 8rpx 25rpx;
  box-sizing: border-box;
}

.mine-page {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
  position: relative;
}

.mine-msg {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  height: 85rpx;
  box-sizing: border-box;
}

.mine-msg text:nth-child(1) {
  color: #747784;
}

.mine-icon text:nth-child(1) {
  color: #221815;
  margin-right: 30rpx;
}

.icon-right {
  display: inline-block;
  border-top: 1px solid #b2b2b2;
  border-right: 1px solid #b2b2b2;
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: rotate(45deg) translate(0, -75%);
  width: 15rpx;
  height: 15rpx;
  border-width: 2rpx;
}

.template-view {
  height: 350rpx;
}

.mine-phone {
  position: absolute;
  left: 0;
  top: 85rpx;
  width: 100%;
  height: 85rpx;
  border: none;
  background: transparent;
}
