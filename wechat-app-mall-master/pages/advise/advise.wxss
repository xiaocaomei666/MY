/* pages/advise/advise.wxss */

.advise-page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  font-size: 28rpx;
}

.advise {
  width: 100%;
  height: 99%;
  margin-top: 10rpx;
  background: #fff;
  padding: 35rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  text-align: left;
}

.advise-title {
  margin-bottom: 33rpx;
}

.advise-title input {
  width: 695rpx;
  height: 54rpx;
  border: 1rpx solid #afafaf;
  border-radius: 15rpx;
  padding-left: 10rpx;
 
}

.advise-content {
  width: 695rpx;
  height: 500rpx;
  border: 1rpx solid #afafaf;
  border-radius: 15rpx;
}

.advise-content  textarea {
  width: 695rpx;
  height: 500rpx;
  padding: 20rpx 0 0 10rpx;
}

.placeholder-class {
  color: #888;
  font-size: 23rpx;
  text-align: left;
}

.advise-post {
  position: absolute;
  left: 50%;
  bottom: 35rpx;
  background: #69C3AA;
  width: 694rpx;
  height: 74rpx;
  color: #fff;
  line-height: 74rpx;
  border-radius: 15rpx;
  margin-left: -347rpx;
  text-align: center;
}
